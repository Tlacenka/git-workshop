{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["node", "jest"],
    "rootDir": "src",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules", "tmp"]
}
